<tool id="variants" name="Mutation Pipeline" version="0.0.1">
    <description>Mutation Pipeline for calling SNPs and variants</description>
    <requirements>
        <requirement type="package"></requirement>
    </requirements>
    <command>
     rnaseq_mutation_pipeline.py
--reference /N/dc2/projects/galaxyshared/trinity/tools/FUSION_ANNOTATOR_LIB/Hg19.fa
--index /N/dc2/projects/galaxyshared/trinity/tools/FUSION_ANNOTATOR_LIB/Hg19.fa_star_index
--left $left_input
--right $right_input
--out_dir "subdir"
--threads 8 
--plot
--variant_call_mode SAM 
--recalibrate_sam 
--log $snp_log
--variant_filtering_mode BCFTOOLS 
--realign
--vcf /N/dc2/projects/galaxyshared/trinity/pipeline_goodies/resources/dbsnp_138.b37_Hg19.vcf 
--update AddOrReplaceReadGroups.jar:/N/dc2/projects/galaxyshared/trinity/picard-tools-1.123,MarkDuplicates.jar:/N/dc2/projects/galaxyshared/trinity/picard-tools-1.123,GenomeAnalysisTK.jar:/N/dc2/projects/galaxyshared/trinity/GATK3.1-1,samtools:/N/soft/rhel6/samtools/1.2/bin,bcftools:/N/soft/rhel6/bcftools/1.2/bin,summarize_annotate_vcf.py:/N/dc2/projects/galaxyshared/trinity/Trinity_CTAT/mutation/src,plot-vcfstats:/N/soft/rhel6/bcftools/1.2/bin >> monday_test.txt

    </command>
    <macros>
    </macros>
    <stdio>
      <exit_code range="1:"  level="fatal"   description="Error returned from pipeline" />
    </stdio>
    <regex match="Pipeline run failed"
           source="stderr"
           level="fatal"
           description="Unknown error encountered" />
    <inputs>
      <param format="fasta,fastq" name="left_input" type="data" label="Left/Forward strand reads" help=""/>
      <param format="fasta,fastq" name="right_input" type="data" label="Right/Reverse strand reads" help=""/>
      <param name="index" type="select" label="Select a reference genome" help="If your genome of interest is not listed, contact the Galaxy team">
        <options from_data_table="snp_indexes">
	  <filter type="sort_by" column="2"/>
	  <validator type="no_options" message="No indexes are available for the selected input dataset"/>
        </options>
      </param>
    </inputs>
    <outputs>
      <data format="txt" name="snp_log" label="${tool.name} on ${on_string}: log" />
      <data format="vcf" name="variants" label="${tool.name} on ${on_string}: Variants" from_work_dir="subdir/variants_annotated.vcf"/> 
      <data format="bam" name="bamfile" label="Cool bamfile" from_work_dir="subdir/misc/Aligned.out.sorted.bam"/>
    </outputs>
    <tests>
    </tests>
    <help>
        SNP Pipeline draft
    </help>
</tool>
