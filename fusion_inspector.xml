<tool id="fusion-inspector" name="Fusion-inspector" version="0.0.1">
    <description>Fusion-finding Pipeline final step</description>
    <requirements>
      <requirement type="set_environment">FUSION_ANNOTATOR_LIB</requirement>
      <requirement type="package"></requirement>
    </requirements>
    <command>
### my $usage = "usage: $0 left.fq right.fq output_directory\n\n";
FusionInspector
--gtf \$FUSION_ANNOTATOR_LIB/gencode.v19.rna_seq_pipeline.gtf 
--genome_fa \$FUSION_ANNOTATOR_LIB/Hg19.fa 
--left_fq $left_input
--right_fq $right_input
--fusions $fusionfile
--out_dir "subdir"
--out_prefix $out_prefix
>> "$snp_log"
    </command>
    <macros>
    </macros>
    <stdio>
      <exit_code range="1:"  level="fatal"   description="Error returned from pipeline" />
    </stdio>
    <regex match="Must investigate error above."
           source="stderr"
           level="fatal"
           description="Unknown error encountered" />
    <inputs>
      <param format="fastq" name="left_input" type="data" label="Left/Forward strand reads" help=""/>
      <param format="fastq" name="right_input" type="data" label="Right/Reverse strand reads" help=""/>
      <param format="tabular" name="fusionfile" multiple="true" type="data" label="Fusion report(s)" help="Create with Star- or Trinity-fusion"/>
      <param name="out_prefix" type="text" value="Example" optional="true" label="Tag your output with a name" help="Optional"/>
    </inputs>
    <outputs>
      <data format="txt" name="snp_log" label="${tool.name} on ${on_string}: log" />
      <data format="tabular" name="candidates" label="${tool.name} on ${on_string}: Summary" from_work_dir="subdir/$out_prefix.fusion_predictions.txt"/> 
      <data format="fasta" name="fusion_fasta" label="${tool.name} on ${on_string}: Fusion Transcripts" from_work_dir="subdir/$out_prefix.gmap_trinity_GG.fusions.fasta" />
	  <data format="tabular" name="juncspan" label="${tool.name} on ${on_string}: FusionJuncSpan" from_work_dir="subdir/$out_prefix.igv.FusionJuncSpan" />
      <data format="bam" name="aligned_reads_bam" label="${tool.name} on ${on_string}: aligned_reads_bam" from_work_dir="subdir/$out_prefix.consolidated.cSorted.bam" />
	  <data format="bed" name="junction_reads_bed" label="${tool.name} on ${on_string}: junction_reads_bed" from_work_dir="subdir/$output_prefix.junction_reads.bam.bed.sorted.bed.gz" />
	  <data format="bed" name="spanning_reads_bed" label="${tool.name} on ${on_string}: spanning_reads_bed" from_work_dir="subdir/$oputput_prefix.junction_reads.bam.bed.sorted.bed.gz" />

    </outputs>
    <tests>
    </tests>
    <help>
        Fusion Inspector Pipeline draft
    </help>
</tool>
